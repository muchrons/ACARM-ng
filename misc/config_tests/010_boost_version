echo -n "checking boost version... "
cat > "$TMP" <<EOF
#include <boost/version.hpp>
#if BOOST_VERSION < 104200
#error boost version is too old
#endif
int main(void)
{
  return 0;
}
EOF
if compile "$TMP"
then
  echo "ok"
else
  echo "too old"
  echo "ERROR: minimal required version is 1.42"
  rm -f "$TMP"
  exit 2
fi
